[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	s = status -sb
	d = diff
	ds = diff --staged
        daily = "!if [ 1 == $(date +%u) ]; then SINCE='last friday'; else SINCE=yesterday; fi; git log --author=erdelyi --since \"$SINCE\""
	c = commit
	b = branch
	co = checkout
	ff = merge --ff-only
	fa = fetch --all
	fu = fetch upstream
	up = !git fetch upstream && git rebase --autostash upstream/master
[diff]
	noprefix = true
[branch]
	autosetuprebase = always

[mergetool.ediff]
    cmd = NO_DESKTOP_SAVE_MODE=1 /Applications/Emacs.app/Contents/MacOS/Emacs --eval \" \
(progn \
  (setq ediff-quit-hook 'kill-emacs) \
  (if (file-readable-p \\\"$BASE\\\") \
      (ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \
                                       \\\"$BASE\\\" nil \\\"$MERGED\\\") \
      (ediff-merge-files \\\"$LOCAL\\\" \\\"$REMOTE\\\" nil \\\"$MERGED\\\")))\"

[mergetool.p4merge]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge -nb Base -nl Theirs -nr Mine $PWD/$BASE $PWD/$LOCAL $PWD/$REMOTE $PWD/$MERGED
	trustExitCode = false

[merge]
	tool = p4merge
[core]
	quotepath = false
[push]
	default = current
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false

# Remote refs for PRs: fetch = +refs/pull/*/head:refs/remotes/upstream/pr/*

[include]
	path = .gitconfig.local

